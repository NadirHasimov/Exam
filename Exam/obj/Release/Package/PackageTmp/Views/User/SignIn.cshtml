@model Exam.Models.UserViewModel
@using Exam.Resources
@using reCAPTCHA.MVC
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/Content/Theme/css/neon-forms.css" rel="stylesheet" />
    <link href="~/Content/Theme/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Custom/css/common.css" rel="stylesheet" />
    <link href="~/Content/custom/css/signIn.css" rel="stylesheet" />

    <link href="~/Content/Theme/css/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Theme/css/select2.css" rel="stylesheet" />
    <link href="~/Content/theme/font-icons/entypo/css/entypo.css" rel="stylesheet" />

    <script src="~/Scripts/theme/jquery-1.11.3.min.js"></script>

    <script src="~/Scripts/theme/jquery.validate.min.js"></script>
    <script src="~/Scripts/theme/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/theme/jquery-ui/jquery-ui.min.js"></script>
</head>
<body class="page-body login-page login-form-fall loaded login-form-fall-init">
    <div class="login-container">
        <div class="login-header login-caret">
            <div class="login-content">
                <a href="index.html" class="logo">
                    <img src="~/images/logo.png" style="font-size:30px" alt="" />
                </a>
                <p class="description">HR Online Test Sistemi</p>
                <!-- progress bar indicator -->
                <div class="login-progressbar-indicator">
                    <h3>0%</h3>
                    <span>Yoxlanılır...</span>
                </div>
            </div>
        </div>
        <div class="login-progressbar">
            <div></div>
        </div>
        <div class="login-form">
            <div class="login-content">
                <div class="form-login-error">
                    <h3>Yanlış login</h3>
                    <p>İstifadəçi adı və ya şifrə yanlışdır.</p>
                </div>
                <ul class="nav nav-tabs bordered">
                    <li>
                        <a href="#user" data-toggle="tab">
                            <span class="hidden-xs">Admin</span>
                        </a>
                    </li>
                    <li class="active">
                        <a href="#candidate" data-toggle="tab">
                            <span class="hidden-xs">Namizərd</span>
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane" id="user">
                        <form method="post" role="form" id="form_login" novalidate="novalidate">
                            <div class="form-group">

                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="entypo-user"></i>
                                    </div>

                                    <input type="text" class="form-control" name="username" id="username" placeholder="Username" autocomplete="off">
                                </div>

                            </div>

                            <div class="form-group">

                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="entypo-key"></i>
                                    </div>

                                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off">
                                </div>

                            </div>
                            <div class="form-group">
                                @Html.Recaptcha(theme: CaptchaTheme.Light, callback: "onCallBack", expiredCallback: "onExpired")
                                <span class="pull-left" style="color:red;" id="error_message"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block btn-login">
                                    <i class="entypo-login"></i>
                                    Login In
                                </button>
                                <div class="login-bottom-links">
                                    <a href="extra-forgot-password.html" class="link">Şifrəni unutmusunuz?</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane active" id="candidate">
                        <form method="post" role="form" id="form_candidate_login" novalidate="novalidate">
                            <div class="form-group">

                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="entypo-user"></i>
                                    </div>

                                    <input type="text" class="form-control" name="finCode" id="finCode" placeholder="FIN code" autocomplete="off">
                                </div>

                            </div>
                            <div class="" style="margin-top:15px;margin-bottom:15px;">
                                @Html.Recaptcha(theme: CaptchaTheme.Light, callback: "onCallBackFin", expiredCallback: "onExpiredFin")
                                <span class="pull-left" style="color:red;" id="error_message_fin"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block btn-login">
                                    <i class="entypo-login"></i>
                                    Daxil ol
                                </button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/theme/bootstrap.min.js"></script>
    <script src="~/Scripts/theme/toastr.js"></script>
    <script src="~/Scripts/theme/jquery.cookie.js"></script>
    <script src="~/Scripts/custom/common.js"></script>
    <script src="~/Scripts/theme/select2.min.js"></script>
    <script src="~/Scripts/custom/user.js"></script>
    <script src="~/Scripts/theme/TweenMax.min.js"></script>
    <script src="~/Scripts/theme/neon-login.js"></script>
</body>
</html>
