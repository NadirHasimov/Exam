@section Styles{
    <link href="~/Content/Selectize/css/selectize.css" rel="stylesheet" />
    <style>
        .panel-default > .panel-heading {
            background-color: #2798ed;
        }

        h1, h2 {
            color: white;
        }

        .dxpgControl_MetropolisBlue, .dxpgCustForm_MetropolisBlue {
            border: 0px !important;
        }

        .pivot .panel-body {
            padding: 0px;
        }
    </style>
}
@section Scripts{
    <script src="~/Content/Selectize/js/standalone/selectize.js"></script>
    <script src="~/Scripts/custom/questionLimit.js"></script>
}
<div class="panel panel-default panel-shadow limit" id="" data-collapsed="0">
    <!-- to apply shadow add class "panel-shadow" -->
    <!-- panel head -->
    <div class="panel-heading">
        <div class="panel-title"><h2>Struktur</h2></div>

        <div class="panel-options">
            <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
        </div>
    </div>

    <!-- panel body -->
    <div class="panel-body">
        <div class="department-container row">
            <div class="parent" id="id1">
                <div class="col-md-11" id="1">
                    <select id="select1" class="select">
                        <option></option>
                        @foreach (var item in (List<Tuple<int, string, int>>)ViewBag.Departments)
                        {
                            <option value="@item.Item1/@item.Item3">@item.Item2</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <div class="">
                        <a href="#" class="modifyDepartment btn btn-info">Dəyişdir</a>
                        <a href="#" class="deleteDepartment btn btn-danger">Sil</a>
                    </div>
                </div>
            </div>

        </div>
        <hr />
        <div class="category-container row" style="">
            <div class="col-md-11" id="par">
                <label class="control-label" style="font-size:medium;">Kateqoriya</label>
                <select id="parentCategory" class="">
                    <option></option>
                    @foreach (var item in (List<Tuple<int, string, int>>)ViewBag.ParentCategories)
                    {
                        <option value="@item.Item1">@item.Item2</option>
                    }
                </select>
            </div>
            <div>
                <div class="form-group">
                    <div class="" style="margin-top:26px;">
                        <a href="#" class="modifyCategory btn btn-info">Dəyişdir</a>
                        <a href="#" class="deleteCategory btn btn-danger">Sil</a>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-md-11" id="sub">

                </div>
                <div id="categoryButtons">

                </div>
            </div>

        </div>
        <div class="row" style="margin-top:10px;">
            <div class="form-group">
                <div class="col-md-1">
                    <label class="control-label">Limit</label>
                    <input id="limit" type="number" class="form-control" placeholder="Limit" />
                </div>
                <div class="col-md-1">
                    <label class="control-label">Say</label>
                    <input id="count" type="number" class="form-control" placeholder="Say" />
                </div>
                <div class="col-md-2">
                    <a id="save" class="btn btn-success btn-icon icon-left" style="margin-top:22px;">
                        <i class="entypo-list-add"></i>
                        Yadda saxla
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="panel panel-default panel-shadow pivot" id="" data-collapsed="0">
    <!-- to apply shadow add class "panel-shadow" -->
    <!-- panel head -->
    <div class="panel-heading">
        <div class="panel-title"><h2>Hesabat</h2></div>

        <div class="panel-options">
            <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
        </div>
    </div>

    <!-- panel body -->
    <div class="panel-body">
        <div class="row" style="margin:20px 0px 20px 0px;" id="Grid">
            @Html.Action("PivotGridPartial")
        </div>
    </div>
</div>

<div class="modal fade" id="departModifyModal">
    <div class="modal-dialog modalCenter">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    x
                </button>
                <h3>Dəyişdir</h3>
            </div>
            <div class="modal-body">
                <input hidden type="text" value="0" id="confirmUpDelStatus" />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input class="form-control" placeholder="Text" id="modifiedText" />
                        </div>
                    </div>
                </div>
                <div class="row">
                </div>
            </div>
            <div class="modal-footer">
                <div">
                    <button type="button" class="btn btn-success col-md-2" id="mdfy_ok" style="bottom:5px;  left:20px; position:absolute;">
                        Ok
                    </button>
                    <button type="button" class="btn btn-secondary col-md-2" data-dismiss="modal" style="bottom:5px;  right:20px; position:absolute;">Bağla</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade custom-width" id="confirmModal">
    <div class="modal-dialog" style="width:15%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    x
                </button>
                <h3 class="modal-title">Əminsiniz?</h3>
            </div>
            <div class="modal-body">
                <input hidden type="text" value="0" id="DeleteUpDelStatus" />
                <button type="button" class="btn btn-success col-md-3" id="confirm" style="bottom:5px;  left:20px; position:absolute;">
                    Ok
                </button>
                <button type="button" class="btn btn-secondary col-md-3" data-dismiss="modal" style="bottom:5px;  right:30px; position:absolute;">Bağla</button>
            </div>
        </div>
    </div>
</div>
